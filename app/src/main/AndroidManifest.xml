<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.angpangii">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Splash screen -->
        <activity
            android:name=".Fragments.SplashStartScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Main activity -->
        <activity
            android:name=".Fragments.MainActivity"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus" >
        </activity>

        <!-- Album activity -->
        <activity
            android:name=".Fragments.AlbumActivity">
        </activity>

        <!-- Bus activity -->
        <activity
            android:name=".Fragments.BusActivity">
        </activity>

        <!-- CCTV activity -->
        <activity
            android:name=".Fragments.CCTVActivity">
        </activity>

        <!-- Contact activity -->
        <activity
            android:name=".Fragments.ContactActivity">
        </activity>

        <!-- Login activity -->
        <activity
            android:name=".Fragments.LoginActivity">
        </activity>

        <!-- menu activity -->
        <activity
            android:name=".Fragments.MenuActivity">
        </activity>

        <!-- Message activity -->
        <activity
            android:name=".Fragments.MessageActivity">
        </activity>

        <!-- Notice activity -->
        <activity
            android:name=".Fragments.NoticeActivity">
        </activity>

        <!-- Setting activity -->
        <activity
            android:name=".Fragments.SettingActivity">
        </activity>

        <!-- Status activity -->
        <activity
            android:name=".Fragments.StatusActivity">
        </activity>

        <!-- Health activity -->
        <activity
            android:name=".Fragments.HealthActivity">
        </activity>
    </application>


</manifest>
