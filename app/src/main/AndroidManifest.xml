<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.angpangii">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- allow the application to access network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash screen -->
        <activity
            android:name=".Fragments.SplashStartScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Main activity -->
        <activity
            android:name=".Fragments.MainActivity"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus"
            android:launchMode="singleTop"></activity>

        <!-- Album activity -->
        <activity android:name=".Fragments.AlbumActivity"
            android:parentActivityName=".Fragments.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.angpangii.Fragments.MainActivity" />
        </activity>

        <!-- Bus activity -->
        <activity android:name=".Fragments.BusActivity"
            android:parentActivityName=".Fragments.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.angpangii.Fragments.MainActivity" />
        </activity>

        <!-- CCTV activity -->
        <activity android:name=".Fragments.CCTVActivity"
            android:parentActivityName=".Fragments.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.angpangii.Fragments.MainActivity" />
        </activity>

        <!-- Contact activity -->
        <activity android:name=".Fragments.ContactActivity"
            android:parentActivityName=".Fragments.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.angpangii.Fragments.MainActivity" />
        </activity>

        <!-- Login activity -->
        <activity android:name=".Fragments.LoginActivity"></activity>

        <!-- menu activity -->
        <activity android:name=".Fragments.MenuActivity"
            android:parentActivityName=".Fragments.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.angpangii.Fragments.MainActivity" />
        </activity>

        <!-- Message activity -->
        <activity android:name=".Fragments.MessageActivity"></activity>

        <!-- Notice activity -->
        <activity android:name=".Fragments.NoticeActivity"></activity>

        <!-- Setting activity -->
        <activity android:name=".Fragments.SettingActivity"
            android:parentActivityName=".Fragments.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.angpangii.Fragments.MainActivity" />
        </activity>

        <!-- Status activity -->
        <activity android:name=".Fragments.StatusActivity"
            android:parentActivityName=".Fragments.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.angpangii.Fragments.MainActivity" />
        </activity>

        <!-- Health activity -->
        <activity android:name=".Fragments.HealthActivity"
            android:parentActivityName=".Fragments.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.angpangii.Fragments.MainActivity" />
        </activity>
        <!--
            ATTENTION: This was auto-generated to add Google Play services to your project for
            App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Fragments.Login2Activity"
            android:label="@string/title_activity_login2"></activity>
    </application>

</manifest>